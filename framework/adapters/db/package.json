{
  "name": "@athyper/adapter-db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "prisma",
    "migrations",
    "sql",
    "seed",
    "types"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "prisma generate && tsup src/index.ts --format esm --dts --sourcemap --outDir dist --external kysely --external pg --external @athyper/core",
    "dev": "tsup src/index.ts --format esm --dts --sourcemap --outDir dist --watch --external kysely --external pg --external @athyper/core",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:codegen": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:pull": "prisma db pull",
    "prisma:pull:force": "prisma db pull --force",
    "prisma:studio": "prisma studio",
    "kysely:codegen": "prisma generate",
    "db:provision": "tsx src/seed/seed.ts",
    "db:provision:ddl": "tsx src/seed/seed.ts --ddl-only",
    "db:provision:seed": "tsx src/seed/seed.ts --seed-only",
    "db:provision:reset": "tsx src/seed/seed.ts --reset",
    "db:provision:status": "tsx src/seed/seed.ts --status",
    "db:provision:force": "tsx src/seed/seed.ts --force"
  },
  "dependencies": {
    "@athyper/core": "workspace:*",
    "kysely": "^0.27.4",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "prisma": "^7.4.0",
    "prisma-kysely": "^3.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
