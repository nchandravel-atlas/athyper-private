{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "ASSET",
  "module_name": "Asset Management",
  "dashboards": [
    {
      "code": "asset_overview",
      "title_key": "dashboard.ASSET.overview.title",
      "description_key": "dashboard.ASSET.overview.description",
      "icon": "building",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.ASSET.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.ASSET.overview.kpi.total_assets", "query_key": "asset.total_assets", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.ASSET.overview.kpi.net_book_value", "query_key": "asset.net_book_value", "format": "currency" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.ASSET.overview.kpi.depreciation_mtd", "query_key": "asset.depreciation_mtd", "format": "currency" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.ASSET.overview.kpi.disposals", "query_key": "asset.disposals", "format": "number" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.ASSET.overview.chart.asset_by_category", "query_key": "asset.asset_by_category", "chart_type": "pie" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.ASSET.overview.list.recent_acquisitions", "query_key": "asset.recent_acquisitions", "columns": ["date", "name", "category", "value"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
