{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "CONTRACT",
  "module_name": "Contract Management",
  "dashboards": [
    {
      "code": "contract_overview",
      "title_key": "dashboard.CONTRACT.overview.title",
      "description_key": "dashboard.CONTRACT.overview.description",
      "icon": "file-text",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.CONTRACT.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.CONTRACT.overview.kpi.active_contracts", "query_key": "contract.active_contracts", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.CONTRACT.overview.kpi.expiring_soon", "query_key": "contract.expiring_soon", "format": "number" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.CONTRACT.overview.kpi.total_value", "query_key": "contract.total_value", "format": "currency" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.CONTRACT.overview.kpi.renewals_due", "query_key": "contract.renewals_due", "format": "number" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.CONTRACT.overview.chart.contracts_by_status", "query_key": "contract.contracts_by_status", "chart_type": "pie" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.CONTRACT.overview.list.recent_contracts", "query_key": "contract.recent_contracts", "columns": ["date", "title", "party", "value"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
