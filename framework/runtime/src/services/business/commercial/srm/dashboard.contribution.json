{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "SRM",
  "module_name": "Supplier Relationship Management",
  "dashboards": [
    {
      "code": "srm_overview",
      "title_key": "dashboard.SRM.overview.title",
      "description_key": "dashboard.SRM.overview.description",
      "icon": "handshake",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.SRM.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.SRM.overview.kpi.active_suppliers", "query_key": "srm.active_suppliers", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.SRM.overview.kpi.pending_evaluations", "query_key": "srm.pending_evaluations", "format": "number" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.SRM.overview.kpi.avg_score", "query_key": "srm.avg_score", "format": "percent" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.SRM.overview.kpi.expiring_contracts", "query_key": "srm.expiring_contracts", "format": "number" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.SRM.overview.chart.score_distribution", "query_key": "srm.score_distribution", "chart_type": "bar" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.SRM.overview.list.recent_evaluations", "query_key": "srm.recent_evaluations", "columns": ["date", "supplier", "score", "status"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
