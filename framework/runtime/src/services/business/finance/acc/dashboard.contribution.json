{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "ACC",
  "module_name": "Finance (Core Accounting)",
  "dashboards": [
    {
      "code": "acc_overview",
      "title_key": "dashboard.ACC.overview.title",
      "description_key": "dashboard.ACC.overview.description",
      "icon": "calculator",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.ACC.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.ACC.overview.kpi.total_revenue", "query_key": "acc.total_revenue", "format": "currency" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.ACC.overview.kpi.accounts_receivable", "query_key": "acc.accounts_receivable", "format": "currency" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.ACC.overview.kpi.accounts_payable", "query_key": "acc.accounts_payable", "format": "currency" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.ACC.overview.kpi.net_income", "query_key": "acc.net_income", "format": "currency" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.ACC.overview.chart.revenue_trend", "query_key": "acc.revenue_trend", "chart_type": "area" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.ACC.overview.list.recent_journals", "query_key": "acc.recent_journals", "columns": ["date", "reference", "description", "amount"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
