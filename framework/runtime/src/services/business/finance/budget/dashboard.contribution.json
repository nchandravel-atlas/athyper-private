{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "BUDGET",
  "module_name": "Budget & Funds Control",
  "dashboards": [
    {
      "code": "budget_overview",
      "title_key": "dashboard.BUDGET.overview.title",
      "description_key": "dashboard.BUDGET.overview.description",
      "icon": "pie-chart",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.BUDGET.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.BUDGET.overview.kpi.total_budget", "query_key": "budget.total_budget", "format": "currency" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.BUDGET.overview.kpi.committed", "query_key": "budget.committed", "format": "currency" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.BUDGET.overview.kpi.available", "query_key": "budget.available", "format": "currency" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.BUDGET.overview.kpi.utilization", "query_key": "budget.utilization", "format": "percent" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.BUDGET.overview.chart.budget_vs_actual", "query_key": "budget.budget_vs_actual", "chart_type": "bar" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.BUDGET.overview.list.budget_exceptions", "query_key": "budget.budget_exceptions", "columns": ["date", "department", "type", "amount"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
