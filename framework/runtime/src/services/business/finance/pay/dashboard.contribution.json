{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "PAY",
  "module_name": "Payment Processing",
  "dashboards": [
    {
      "code": "pay_overview",
      "title_key": "dashboard.PAY.overview.title",
      "description_key": "dashboard.PAY.overview.description",
      "icon": "credit-card",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.PAY.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.PAY.overview.kpi.collections_mtd", "query_key": "pay.collections_mtd", "format": "currency" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.PAY.overview.kpi.disbursements_mtd", "query_key": "pay.disbursements_mtd", "format": "currency" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.PAY.overview.kpi.pending_payments", "query_key": "pay.pending_payments", "format": "number" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.PAY.overview.kpi.overdue_payments", "query_key": "pay.overdue_payments", "format": "number" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.PAY.overview.chart.payment_flow", "query_key": "pay.payment_flow", "chart_type": "bar" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.PAY.overview.list.recent_payments", "query_key": "pay.recent_payments", "columns": ["date", "reference", "type", "amount"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
