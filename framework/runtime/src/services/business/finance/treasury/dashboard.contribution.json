{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "TREASURY",
  "module_name": "Treasury & Cash Management",
  "dashboards": [
    {
      "code": "treasury_overview",
      "title_key": "dashboard.TREASURY.overview.title",
      "description_key": "dashboard.TREASURY.overview.description",
      "icon": "landmark",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.TREASURY.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.TREASURY.overview.kpi.cash_position", "query_key": "treasury.cash_position", "format": "currency" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.TREASURY.overview.kpi.fx_exposure", "query_key": "treasury.fx_exposure", "format": "currency" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.TREASURY.overview.kpi.liquidity_ratio", "query_key": "treasury.liquidity_ratio", "format": "percent" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.TREASURY.overview.kpi.bank_balance", "query_key": "treasury.bank_balance", "format": "currency" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.TREASURY.overview.chart.cash_flow", "query_key": "treasury.cash_flow", "chart_type": "line" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.TREASURY.overview.list.recent_transfers", "query_key": "treasury.recent_transfers", "columns": ["date", "from_account", "to_account", "amount"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
