{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "SVC",
  "module_name": "Support & Service Management",
  "dashboards": [
    {
      "code": "svc_overview",
      "title_key": "dashboard.SVC.overview.title",
      "description_key": "dashboard.SVC.overview.description",
      "icon": "headphones",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.SVC.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.SVC.overview.kpi.open_tickets", "query_key": "svc.open_tickets", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.SVC.overview.kpi.sla_compliance", "query_key": "svc.sla_compliance", "format": "percent" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.SVC.overview.kpi.avg_resolution", "query_key": "svc.avg_resolution", "format": "number" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.SVC.overview.kpi.escalated", "query_key": "svc.escalated", "format": "number" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.SVC.overview.chart.ticket_trend", "query_key": "svc.ticket_trend", "chart_type": "area" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.SVC.overview.list.recent_tickets", "query_key": "svc.recent_tickets", "columns": ["date", "subject", "priority", "status"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
