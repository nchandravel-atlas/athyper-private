{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "HRM",
  "module_name": "Human Resources",
  "dashboards": [
    {
      "code": "hrm_overview",
      "title_key": "dashboard.HRM.overview.title",
      "description_key": "dashboard.HRM.overview.description",
      "icon": "user",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.HRM.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.HRM.overview.kpi.headcount", "query_key": "hrm.headcount", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.HRM.overview.kpi.new_hires", "query_key": "hrm.new_hires", "format": "number" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.HRM.overview.kpi.turnover_rate", "query_key": "hrm.turnover_rate", "format": "percent" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.HRM.overview.kpi.open_positions", "query_key": "hrm.open_positions", "format": "number" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.HRM.overview.chart.headcount_trend", "query_key": "hrm.headcount_trend", "chart_type": "line" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.HRM.overview.list.recent_changes", "query_key": "hrm.recent_changes", "columns": ["date", "employee", "type", "department"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
