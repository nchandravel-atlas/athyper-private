{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "PRL",
  "module_name": "Payroll",
  "dashboards": [
    {
      "code": "prl_overview",
      "title_key": "dashboard.PRL.overview.title",
      "description_key": "dashboard.PRL.overview.description",
      "icon": "dollar-sign",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.PRL.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.PRL.overview.kpi.payroll_cost_mtd", "query_key": "prl.payroll_cost_mtd", "format": "currency" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.PRL.overview.kpi.pending_approvals", "query_key": "prl.pending_approvals", "format": "number" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.PRL.overview.kpi.statutory_due", "query_key": "prl.statutory_due", "format": "currency" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.PRL.overview.kpi.exceptions", "query_key": "prl.exceptions", "format": "number" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.PRL.overview.chart.cost_trend", "query_key": "prl.cost_trend", "chart_type": "area" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.PRL.overview.list.recent_payrolls", "query_key": "prl.recent_payrolls", "columns": ["date", "period", "employees", "total"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
