{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "PRJ",
  "module_name": "Project Management",
  "dashboards": [
    {
      "code": "prj_overview",
      "title_key": "dashboard.PRJ.overview.title",
      "description_key": "dashboard.PRJ.overview.description",
      "icon": "folder",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.PRJ.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.PRJ.overview.kpi.active_projects", "query_key": "prj.active_projects", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.PRJ.overview.kpi.budget_utilization", "query_key": "prj.budget_utilization", "format": "percent" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.PRJ.overview.kpi.tasks_overdue", "query_key": "prj.tasks_overdue", "format": "number" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.PRJ.overview.kpi.revenue_recognized", "query_key": "prj.revenue_recognized", "format": "currency" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.PRJ.overview.chart.budget_vs_actual", "query_key": "prj.budget_vs_actual", "chart_type": "bar" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.PRJ.overview.list.recent_tasks", "query_key": "prj.recent_tasks", "columns": ["date", "project", "task", "status"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
