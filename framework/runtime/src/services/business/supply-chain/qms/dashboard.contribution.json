          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.QMS.overview.list.recent_inspections", "query_key": "qms.recent_inspections", "columns": ["date", "item", "result", "inspector"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
