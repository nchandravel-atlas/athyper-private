{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "SUBCON",
  "module_name": "Subcontracting",
  "dashboards": [
    {
      "code": "subcon_overview",
      "title_key": "dashboard.SUBCON.overview.title",
      "description_key": "dashboard.SUBCON.overview.description",
      "icon": "git-branch",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.SUBCON.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.SUBCON.overview.kpi.active_jobs", "query_key": "subcon.active_jobs", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.SUBCON.overview.kpi.pending_delivery", "query_key": "subcon.pending_delivery", "format": "number" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.SUBCON.overview.kpi.overdue", "query_key": "subcon.overdue", "format": "number" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.SUBCON.overview.kpi.completion_rate", "query_key": "subcon.completion_rate", "format": "percent" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.SUBCON.overview.chart.job_status", "query_key": "subcon.job_status", "chart_type": "pie" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.SUBCON.overview.list.recent_jobs", "query_key": "subcon.recent_jobs", "columns": ["date", "contractor", "item", "status"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
