{
  "$schema": "athyper://dashboard-contribution/v1",
  "module_code": "MDG",
  "module_name": "Master Data Governance",
  "dashboards": [
    {
      "code": "mdg_overview",
      "title_key": "dashboard.MDG.overview.title",
      "description_key": "dashboard.MDG.overview.description",
      "icon": "shield",
      "workbenches": ["user", "admin"],
      "sort_order": 100,
      "acl": [
        { "principal_type": "persona", "principal_key": "agent", "permission": "view" },
        { "principal_type": "persona", "principal_key": "manager", "permission": "view" },
        { "principal_type": "persona", "principal_key": "module_admin", "permission": "edit" },
        { "principal_type": "persona", "principal_key": "tenant_admin", "permission": "edit" }
      ],
      "layout": {
        "schema_version": 1,
        "columns": 12,
        "row_height": 80,
        "items": [
          { "id": "h1", "widget_type": "heading", "params": { "text_key": "dashboard.MDG.overview.title", "level": "h2" }, "grid": { "x": 0, "y": 0, "w": 12, "h": 1 } },
          { "id": "kpi1", "widget_type": "kpi", "params": { "label_key": "dashboard.MDG.overview.kpi.pending_approvals", "query_key": "mdg.pending_approvals", "format": "number" }, "grid": { "x": 0, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi2", "widget_type": "kpi", "params": { "label_key": "dashboard.MDG.overview.kpi.change_requests", "query_key": "mdg.change_requests", "format": "number" }, "grid": { "x": 3, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi3", "widget_type": "kpi", "params": { "label_key": "dashboard.MDG.overview.kpi.compliance_rate", "query_key": "mdg.compliance_rate", "format": "percent" }, "grid": { "x": 6, "y": 1, "w": 3, "h": 2 } },
          { "id": "kpi4", "widget_type": "kpi", "params": { "label_key": "dashboard.MDG.overview.kpi.quality_score", "query_key": "mdg.quality_score", "format": "percent" }, "grid": { "x": 9, "y": 1, "w": 3, "h": 2 } },
          { "id": "chart1", "widget_type": "chart", "params": { "title_key": "dashboard.MDG.overview.chart.quality_trend", "query_key": "mdg.quality_trend", "chart_type": "line" }, "grid": { "x": 0, "y": 3, "w": 8, "h": 4 } },
          { "id": "list1", "widget_type": "list", "params": { "title_key": "dashboard.MDG.overview.list.pending_reviews", "query_key": "mdg.pending_reviews", "columns": ["date", "entity", "submitter", "status"], "page_size": 5 }, "grid": { "x": 8, "y": 3, "w": 4, "h": 4 } }
        ]
      }
    }
  ]
}
