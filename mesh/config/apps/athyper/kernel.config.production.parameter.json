{
  "$schema": "./kernel.config.schema.json",
  "$comment": "Production Environment (Ubuntu) — live production system. Infrastructure wiring (db, redis, s3, telemetry endpoints) is LOCKED from this file and must be set via SUPERSTAR env vars.",

  "env": "production",
  "mode": "api",
  "serviceName": "athyper-runtime",
  "port": 3000,

  "logLevel": "warn",
  "shutdownTimeoutMs": 60000,

  "publicBaseUrl": "https://api.athyper.com",
  "publicWebUrl": "https://neon.athyper.com",

  "db": {
    "$comment": "LOCKED — stripped at load time. Set DATABASE_URL / DATABASE_ADMIN_URL via SUPERSTAR env vars.",
    "url": "LOCKED_USE_ENV_VAR",
    "adminUrl": "LOCKED_USE_ENV_VAR",
    "poolMax": 50
  },

  "redis": {
    "$comment": "LOCKED — stripped at load time. Set REDIS_URL via SUPERSTAR env vars.",
    "url": "LOCKED_USE_ENV_VAR"
  },

  "s3": {
    "$comment": "LOCKED — stripped at load time. Set S3_* via SUPERSTAR env vars.",
    "endpoint": "LOCKED_USE_ENV_VAR",
    "accessKey": "LOCKED_USE_ENV_VAR",
    "secretKey": "LOCKED_USE_ENV_VAR",
    "region": "us-east-1",
    "bucket": "athyper",
    "useSSL": true
  },

  "iam": {
    "strategy": "single_realm",
    "defaultRealmKey": "athyper",
    "defaultTenantKey": null,
    "defaultOrgKey": null,
    "requireTenantClaimsInProd": true,
    "realms": {
      "athyper": {
        "iam": {
          "issuerUrl": "https://iam.mesh.athyper.com/realms/athyper",
          "clientId": "athyper-api-runtime",
          "allowedAzp": ["neon-web", "neon-svc-bff", "athyper-svc-runtime-worker"],
          "clientSecretRef": "IAM_ATHYPER_CLIENT_SECRET"
        },
        "defaults": {
          "features": {
            "metaStudio": false,
            "debugMode": false
          },
          "policies": {
            "strictTenantIsolation": true
          }
        },
        "tenants": {}
      }
    }
  },

  "telemetry": {
    "$comment": "LOCKED — otlpEndpoint and enabled are stripped at load time. Set via SUPERSTAR env vars.",
    "enabled": true,
    "otlpEndpoint": "LOCKED_USE_ENV_VAR",
    "serviceName": "athyper-runtime",
    "serviceVersion": "1.0.0"
  }
}
