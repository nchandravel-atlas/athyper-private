{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "kernel.config.schema.json",
  "title": "athyper Kernel Runtime Configuration",
  "description": "Schema for kernel.config.*.parameter.json files. Mirrors the Zod RuntimeConfigSchema in framework/runtime/src/kernel/config.schema.ts. Fields marked LOCKED are stripped from file config at load time and must be set via environment variables.",
  "type": "object",
  "required": ["db", "redis", "s3", "iam"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference (ignored by loader)"
    },
    "$comment": {
      "type": "string",
      "description": "Human-readable comment (ignored by loader)"
    },
    "env": {
      "type": "string",
      "enum": ["local", "staging", "production"],
      "default": "local",
      "description": "Environment identifier"
    },
    "mode": {
      "type": "string",
      "enum": ["api", "worker", "scheduler"],
      "default": "api",
      "description": "Runtime mode"
    },
    "serviceName": {
      "type": "string",
      "minLength": 1,
      "default": "athyper-runtime",
      "description": "Service name for telemetry and logging"
    },
    "port": {
      "type": "integer",
      "minimum": 1,
      "default": 3000,
      "description": "HTTP listen port"
    },
    "logLevel": {
      "type": "string",
      "enum": ["fatal", "error", "warn", "info", "debug", "trace"],
      "default": "info",
      "description": "Minimum log level"
    },
    "shutdownTimeoutMs": {
      "type": "integer",
      "minimum": 1,
      "default": 15000,
      "description": "Graceful shutdown timeout in milliseconds"
    },
    "publicBaseUrl": {
      "type": "string",
      "format": "uri",
      "description": "Public URL for the Runtime API (e.g. https://api.athyper.local)"
    },
    "publicWebUrl": {
      "type": "string",
      "format": "uri",
      "description": "Public URL for the Neon web app (e.g. https://neon.athyper.local)"
    },
    "db": {
      "type": "object",
      "required": ["url"],
      "description": "Database config. LOCKED fields (url, adminUrl): stripped from file, set via DATABASE_URL / DATABASE_ADMIN_URL env vars.",
      "properties": {
        "$comment": {
          "type": "string",
          "description": "Human-readable comment (ignored by loader)"
        },
        "url": {
          "type": "string",
          "minLength": 1,
          "description": "LOCKED — PostgreSQL connection URL via PgBouncer (port 6432). Set via DATABASE_URL env var."
        },
        "adminUrl": {
          "type": "string",
          "minLength": 1,
          "description": "LOCKED — Direct PostgreSQL connection URL for admin/migrations (port 5432). Set via DATABASE_ADMIN_URL env var."
        },
        "poolMax": {
          "type": "integer",
          "minimum": 1,
          "default": 10,
          "description": "Maximum connection pool size (NOT locked — read from file)"
        }
      },
      "additionalProperties": false
    },
    "iam": {
      "type": "object",
      "required": ["realms"],
      "description": "IAM config. LOCKED fields (strategy, defaultRealmKey, defaultTenantKey, defaultOrgKey): set via env vars. Realm definitions (realms map) are read from file.",
      "properties": {
        "$comment": {
          "type": "string",
          "description": "Human-readable comment (ignored by loader)"
        },
        "strategy": {
          "type": "string",
          "enum": ["single_realm", "multi_realm"],
          "default": "single_realm",
          "description": "LOCKED — Realm routing strategy. Set via IAM_STRATEGY env var."
        },
        "defaultRealmKey": {
          "type": "string",
          "minLength": 1,
          "default": "main",
          "description": "LOCKED — Default realm key (must exist in realms map). Set via IAM_DEFAULT_REALM env var."
        },
        "defaultTenantKey": {
          "type": ["string", "null"],
          "minLength": 1,
          "description": "LOCKED — Default tenant key for jobs/scheduler bootstrap. Set via IAM_DEFAULT_TENANT env var."
        },
        "defaultOrgKey": {
          "type": ["string", "null"],
          "minLength": 1,
          "description": "LOCKED — Default org key for jobs/scheduler bootstrap. Set via IAM_DEFAULT_ORG env var."
        },
        "requireTenantClaimsInProd": {
          "type": "boolean",
          "default": true,
          "description": "Require tenant claims in JWT for production environments (NOT locked — read from file)"
        },
        "realms": {
          "type": "object",
          "description": "Map of realm keys to realm configurations (NOT locked — read from file)",
          "additionalProperties": {
            "$ref": "#/definitions/RealmConfig"
          },
          "default": {}
        }
      },
      "additionalProperties": false
    },
    "redis": {
      "type": "object",
      "required": ["url"],
      "description": "Redis config. LOCKED field (url): stripped from file, set via REDIS_URL env var.",
      "properties": {
        "$comment": {
          "type": "string",
          "description": "Human-readable comment (ignored by loader)"
        },
        "url": {
          "type": "string",
          "minLength": 1,
          "description": "LOCKED — Redis connection URL (e.g. redis://:password@host:6379/0). Set via REDIS_URL env var."
        }
      },
      "additionalProperties": false
    },
    "s3": {
      "type": "object",
      "required": ["endpoint", "accessKey", "secretKey"],
      "description": "S3/MinIO config. ALL fields are LOCKED — stripped from file, set via S3_* or ATHYPER_SUPER__S3_* env vars.",
      "properties": {
        "$comment": {
          "type": "string",
          "description": "Human-readable comment (ignored by loader)"
        },
        "endpoint": {
          "type": "string",
          "minLength": 1,
          "description": "LOCKED — S3/MinIO endpoint URL. Set via S3_ENDPOINT env var."
        },
        "accessKey": {
          "type": "string",
          "minLength": 1,
          "description": "LOCKED — S3 access key (also MinIO root user). Set via S3_ACCESS_KEY env var."
        },
        "secretKey": {
          "type": "string",
          "minLength": 1,
          "description": "LOCKED — S3 secret key (also MinIO root password). Set via S3_SECRET_KEY env var."
        },
        "region": {
          "type": "string",
          "minLength": 1,
          "default": "us-east-1",
          "description": "LOCKED — S3 region. Set via S3_REGION env var."
        },
        "bucket": {
          "type": "string",
          "minLength": 1,
          "default": "athyper",
          "description": "LOCKED — S3 bucket name. Set via S3_BUCKET env var."
        },
        "useSSL": {
          "type": "boolean",
          "default": false,
          "description": "LOCKED — Use SSL/TLS for S3 connections. Set via S3_USE_SSL env var."
        }
      },
      "additionalProperties": false
    },
    "telemetry": {
      "type": "object",
      "description": "Telemetry config. LOCKED fields (otlpEndpoint, enabled): set via env vars. serviceName and serviceVersion are read from file.",
      "properties": {
        "$comment": {
          "type": "string",
          "description": "Human-readable comment (ignored by loader)"
        },
        "otlpEndpoint": {
          "type": "string",
          "minLength": 1,
          "description": "LOCKED — OpenTelemetry collector endpoint. Set via OTLP_ENDPOINT env var."
        },
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "LOCKED — Enable telemetry export. Set via TELEMETRY_ENABLED env var."
        },
        "serviceName": {
          "type": "string",
          "description": "Service name for telemetry spans (NOT locked — read from file)"
        },
        "serviceVersion": {
          "type": "string",
          "description": "Service version for telemetry spans (NOT locked — read from file)"
        }
      },
      "additionalProperties": false
    },
    "jobQueue": {
      "type": "object",
      "description": "BullMQ job queue configuration.",
      "properties": {
        "queueName": {
          "type": "string",
          "minLength": 1,
          "default": "athyper-jobs",
          "description": "BullMQ queue name (all job types share one queue, differentiated by data.type)"
        },
        "defaultRetries": {
          "type": "integer",
          "minimum": 0,
          "default": 3,
          "description": "Default retry attempts for failed jobs"
        }
      },
      "additionalProperties": false
    },
    "document": {
      "type": "object",
      "description": "Document services configuration (PDF rendering, storage, retention).",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable document rendering services"
        },
        "rendering": {
          "type": "object",
          "properties": {
            "engine": {
              "type": "string",
              "enum": ["puppeteer", "playwright"],
              "default": "puppeteer",
              "description": "PDF rendering engine (only puppeteer currently implemented)"
            },
            "chromiumPath": {
              "type": "string",
              "description": "Path to Chromium binary (auto-detected if omitted)"
            },
            "concurrency": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10,
              "default": 3,
              "description": "Maximum concurrent PDF rendering pages"
            },
            "timeoutMs": {
              "type": "integer",
              "minimum": 1,
              "default": 30000,
              "description": "PDF render timeout in milliseconds"
            },
            "maxRetries": {
              "type": "integer",
              "minimum": 0,
              "default": 3,
              "description": "Maximum retry attempts for failed renders"
            },
            "paperFormat": {
              "type": "string",
              "enum": ["A4", "LETTER", "LEGAL"],
              "default": "A4",
              "description": "Default paper format for PDF output"
            },
            "trustedDomains": {
              "type": "array",
              "items": { "type": "string" },
              "default": [],
              "description": "Trusted domains for network requests during rendering (fonts CDN, etc.)"
            },
            "allowedHosts": {
              "type": "array",
              "items": { "type": "string" },
              "default": [],
              "description": "Allowed external hosts for URL-fetching during template resolution"
            },
            "composeTimeoutMs": {
              "type": "integer",
              "minimum": 1,
              "default": 5000,
              "description": "HTML composition timeout in milliseconds"
            },
            "uploadTimeoutMs": {
              "type": "integer",
              "minimum": 1,
              "default": 30000,
              "description": "Output upload to S3 timeout in milliseconds"
            }
          },
          "additionalProperties": false
        },
        "storage": {
          "type": "object",
          "properties": {
            "pathPrefix": {
              "type": "string",
              "default": "documents",
              "description": "S3 path prefix for document outputs"
            },
            "presignedUrlExpirySeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 3600,
              "description": "Presigned download URL expiry in seconds"
            },
            "downloadMode": {
              "type": "string",
              "enum": ["stream", "presigned"],
              "default": "stream",
              "description": "Download mode: stream (proxy through API) or presigned (redirect to S3)"
            }
          },
          "additionalProperties": false
        },
        "jobs": {
          "type": "object",
          "properties": {
            "leaseSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 300,
              "description": "BullMQ lock duration for render jobs (seconds)"
            },
            "heartbeatSeconds": {
              "type": "integer",
              "minimum": 1,
              "default": 30,
              "description": "BullMQ lock renewal interval for render jobs (seconds)"
            }
          },
          "additionalProperties": false
        },
        "retention": {
          "type": "object",
          "properties": {
            "defaultDays": {
              "type": "integer",
              "minimum": 1,
              "default": 2555,
              "description": "Default retention period for document outputs (days)"
            },
            "archiveAfterDays": {
              "type": "integer",
              "minimum": 1,
              "default": 365,
              "description": "Days after which rendered outputs are archived"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "audit": {
      "type": "object",
      "description": "Audit governance configuration.",
      "properties": {
        "writeMode": {
          "type": "string",
          "enum": ["off", "sync", "outbox"],
          "default": "outbox",
          "description": "Audit write mode: off (drop events), sync (direct write), outbox (async via outbox)"
        },
        "hashChainEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable SHA-256 hash chain tamper evidence"
        },
        "timelineEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable unified activity timeline service"
        },
        "retentionDays": {
          "type": "integer",
          "minimum": 1,
          "default": 90,
          "description": "Audit log retention period in days"
        },
        "partitionPreCreateMonths": {
          "type": "integer",
          "minimum": 1,
          "maximum": 12,
          "default": 3,
          "description": "Number of months to pre-create partitions ahead"
        },
        "encryptionEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable column-level encryption for sensitive audit fields (ip_address, user_agent, etc.)"
        },
        "loadSheddingEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable load shedding policy evaluation for audit writes"
        },
        "tieringEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable storage tiering (hot/warm/cold) for audit data"
        },
        "warmAfterDays": {
          "type": "integer",
          "minimum": 1,
          "default": 90,
          "description": "Days before audit data transitions from hot to warm tier"
        },
        "coldAfterDays": {
          "type": "integer",
          "minimum": 1,
          "default": 365,
          "description": "Days before audit data transitions from warm to cold tier"
        }
      },
      "additionalProperties": false
    },
    "notification": {
      "type": "object",
      "description": "Notification framework configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable notification services"
        },
        "providers": {
          "type": "object",
          "properties": {
            "email": {
              "type": "object",
              "properties": {
                "sendgrid": {
                  "type": "object",
                  "properties": {
                    "apiKeyRef": {
                      "type": "string",
                      "description": "LOCKED — Reference for SUPERSTAR env secret resolution (ATHYPER_SUPER__SENDGRID_API_KEY)"
                    },
                    "fromAddress": {
                      "type": "string",
                      "description": "Default sender email address"
                    },
                    "fromName": {
                      "type": "string",
                      "description": "Default sender display name"
                    },
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Enable SendGrid email provider"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "teams": {
              "type": "object",
              "properties": {
                "powerAutomate": {
                  "type": "object",
                  "properties": {
                    "webhookUrl": {
                      "type": "string",
                      "description": "LOCKED — Power Automate webhook URL"
                    },
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Enable Teams via Power Automate"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "whatsapp": {
              "type": "object",
              "properties": {
                "phoneNumberId": {
                  "type": "string",
                  "description": "WhatsApp Business phone number ID"
                },
                "accessTokenRef": {
                  "type": "string",
                  "description": "LOCKED — Reference for SUPERSTAR env secret resolution"
                },
                "businessAccountId": {
                  "type": "string",
                  "description": "WhatsApp Business Account ID"
                },
                "webhookVerifyToken": {
                  "type": "string",
                  "description": "LOCKED — Webhook verification token"
                },
                "enabled": {
                  "type": "boolean",
                  "default": false,
                  "description": "Enable WhatsApp provider"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "delivery": {
          "type": "object",
          "properties": {
            "maxRetries": {
              "type": "integer",
              "minimum": 0,
              "default": 3,
              "description": "Maximum delivery retry attempts"
            },
            "retryBackoffMs": {
              "type": "integer",
              "minimum": 1,
              "default": 2000,
              "description": "Retry backoff delay in milliseconds"
            },
            "dedupWindowMs": {
              "type": "integer",
              "minimum": 1,
              "default": 300000,
              "description": "Deduplication window in milliseconds (5 minutes default)"
            },
            "defaultPriority": {
              "type": "string",
              "enum": ["low", "normal", "high", "critical"],
              "default": "normal",
              "description": "Default notification priority"
            },
            "defaultLocale": {
              "type": "string",
              "minLength": 2,
              "default": "en",
              "description": "Default locale for notification templates"
            },
            "workerConcurrency": {
              "type": "integer",
              "minimum": 1,
              "default": 5,
              "description": "Number of concurrent notification delivery workers"
            }
          },
          "additionalProperties": false
        },
        "digest": {
          "type": "object",
          "properties": {
            "hourlyAt": {
              "type": "integer",
              "minimum": 0,
              "maximum": 59,
              "default": 0,
              "description": "Minute of hour for hourly digest processing"
            },
            "dailyAtHourUtc": {
              "type": "integer",
              "minimum": 0,
              "maximum": 23,
              "default": 8,
              "description": "Hour (UTC) for daily digest processing"
            },
            "weeklyDay": {
              "type": "integer",
              "minimum": 0,
              "maximum": 6,
              "default": 1,
              "description": "Day of week for weekly digest (0=Sunday, 1=Monday)"
            },
            "maxItemsPerDigest": {
              "type": "integer",
              "minimum": 1,
              "default": 50,
              "description": "Maximum items per digest batch"
            }
          },
          "additionalProperties": false
        },
        "retention": {
          "type": "object",
          "properties": {
            "messageDays": {
              "type": "integer",
              "minimum": 1,
              "default": 90,
              "description": "Retention period for notification messages (days)"
            },
            "deliveryDays": {
              "type": "integer",
              "minimum": 1,
              "default": 30,
              "description": "Retention period for delivery records (days)"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "RealmConfig": {
      "type": "object",
      "required": ["iam"],
      "properties": {
        "defaults": {
          "type": "object",
          "description": "Free-form realm-level defaults (feature flags, policies, etc.)",
          "additionalProperties": true,
          "default": {}
        },
        "iam": {
          "type": "object",
          "required": ["issuerUrl", "clientId"],
          "properties": {
            "issuerUrl": {
              "type": "string",
              "format": "uri",
              "description": "OIDC issuer URL (e.g. https://iam.mesh.athyper.local/realms/athyper)"
            },
            "clientId": {
              "type": "string",
              "minLength": 1,
              "description": "OIDC client ID"
            },
            "clientSecretRef": {
              "type": "string",
              "minLength": 1,
              "description": "Reference name for SUPERSTAR env secret resolution (ATHYPER_SUPER__IAM_SECRET__<ref>)"
            }
          },
          "additionalProperties": false
        },
        "tenants": {
          "type": "object",
          "description": "Map of tenant keys to tenant configurations",
          "additionalProperties": {
            "$ref": "#/definitions/TenantConfig"
          },
          "default": {}
        }
      },
      "additionalProperties": false
    },
    "TenantConfig": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "description": "Free-form tenant-level defaults (country, currency, timezone, etc.)",
          "additionalProperties": true,
          "default": {}
        },
        "orgs": {
          "type": "object",
          "description": "Map of org keys to org configurations",
          "additionalProperties": {
            "$ref": "#/definitions/OrgConfig"
          },
          "default": {}
        }
      },
      "additionalProperties": false
    },
    "OrgConfig": {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "description": "Free-form org-level defaults",
          "additionalProperties": true,
          "default": {}
        }
      },
      "additionalProperties": false
    }
  }
}
