{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tooling/tsconfig/base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "ES2022"
        ],
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        ".turbo"
    ]
}
