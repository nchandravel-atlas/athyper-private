{
  "name": "@athyper/theme",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tailwind.preset": {
      "types": "./src/tailwind.preset.ts",
      "import": "./src/tailwind.preset.ts",
      "default": "./src/tailwind.preset.ts"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist", "src", "tokens", "tailwind.preset.ts"],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format esm --dts --sourcemap --outDir dist",
    "dev": "tsup src/index.ts --format esm --dts --sourcemap --outDir dist --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "tsup": "^8.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}
