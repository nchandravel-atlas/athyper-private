{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tooling/tsconfig/base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "composite": false,
        "incremental": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        ".turbo"
    ]
}