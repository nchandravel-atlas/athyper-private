{
  "name": "@neon/<pkg>",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format esm --dts --sourcemap --outDir dist",
    "dev": "tsup src/index.ts --format esm --dts --sourcemap --outDir dist --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint ."
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
