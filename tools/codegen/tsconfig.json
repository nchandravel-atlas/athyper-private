{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@athyper/tsconfig/base",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "ES2022"
        ],
        "verbatimModuleSyntax": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        ".turbo"
    ]
}